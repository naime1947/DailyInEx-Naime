<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="text-align:center; margin-bottom: 40px">
        <h2>View Yearly Report</h2>
        <h3> Company Name:  </h3>
        <h3>Year: @ViewBag.Year</h3>
    </div>
    



    @{
        if (ViewBag.Report != null)
        {
            <div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Month</th>
                            <th scope="col">Income</th>
                            <th scope="col">Expense</th>
                            <th scope="col">Profit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            double TotalIncome = 0;
                            double TotalExpense = 0;
                            double TotalProfit = 0;
                            foreach (DataLibrary.BusinessModel.ViewModel.YearlyInExView data in ViewBag.Report)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@data.Month</td>
                                    <td>@data.MonthlyIncome</td>
                                    <td>@data.MonthlyExpense</td>
                                    <td>@data.GetMonthlyProfit()</td>
                                </tr>
                                i++;
                                TotalIncome += data.MonthlyIncome;
                                TotalExpense += data.MonthlyExpense;
                                TotalProfit += data.GetMonthlyProfit();
                            }
                            <tr class="text-black-50">
                                <td></td>
                                <td style="text-align:center"> Total : </td>
                                <td>@TotalIncome</td>
                                <td>@TotalExpense</td>
                                <td>@TotalProfit</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    <div>
        <footer>
            <p>Report Generated by Naime Ahmed; @DateTime.Now.Year - Daily Income Expense Application</p>
        </footer>
    </div>
</body>
</html>
