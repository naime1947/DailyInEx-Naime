
@{
    ViewBag.Title = "ApproveIncome";
    Layout = "~/Views/Shared/_Layout - Authorized.cshtml";
}

<h2>ApproveIncome</h2>
<form method="post">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Approve</th>
                <th scope="col">Date</th>
                <th scope="col">Amount</th>
                <th scope="col">Cash/Cheque</th>
                <th scope="col">Perticular</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (DataLibrary.BusinessModel.Income data in ViewBag.Incomes)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td><input type="checkbox" class="checkbox" name="Id" value="@data.Id" /></td>
                        <td>@data.Date.ToShortDateString()</td>
                        <td>@data.Amount</td>
                        @if (data.Cash)
                        {
                            <td>Cash</td>
                        }
                        else if (data.Cheque)
                        {
                            <td>Cheque</td>
                        }
                        <td>@data.Particular</td>
                    </tr>
                    i++;
                }

            }
        </tbody>
    </table>
    <input class="btn btn-primary btn-md" type="submit" value="Approve" />
</form>
<button type="button" class="btn btn-primary btn-md" onclick="saveCheckedList">Approve</button>

