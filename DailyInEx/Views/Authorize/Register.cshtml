
@{
    ViewBag.Title = "Company Registeration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div>
    <form method="post">
        <div class="form-group">
            <label for="CompanyName">Company Name</label>
            <input type="text" class="form-control" id="CompanyName" name="CompanyName" placeholder="Google" required>
        </div>
        <div class="form-group">
            <label for="CompanyEmail">Company Email</label>
            <input type="email" class="form-control" id="CompanyEmail" name="CompanyEmail" placeholder="yourname@domain.com" required>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Minimum 6 digit" required>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Password</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="" required>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Company Location" required>
        </div>
        <div class="form-group">
            <label for="CountryId">Country</label>
            <select class="form-control text-center" id="CountryId" name="CountryId" required>
                <option selected value="">--Select--</option>
                @foreach (DataLibrary.BusinessModel.Country country in ViewBag.Countries)
                {
                    <option value="@country.Id">@country.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input role="button" class="btn-success btn-lg btn-block" type="submit" value="Register" />
        </div>
    </form>
</div>
<div class="container" style="margin-top:20px">
    <text>Already a member? </text><a role="button" class="btn-primary btn-lg" href="~/Authorize/Login">    Login    </a>
    <label>@ViewBag.msg</label>
</div>
