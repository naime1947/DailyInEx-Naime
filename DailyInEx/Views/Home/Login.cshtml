
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div>
    <form method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email" placeholder="yourname@domain.com" required>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="" required>
        </div>
        <div class="form-group">
            <input role="button" class="btn-success btn-lg btn-block" type="submit" value="Login" />
            <label class="text-danger">@ViewBag.ErrorMassage</label>
        </div>
    </form>
</div>
<div class="container" style="margin-top:20px">
    <text>Dont have a account? </text><a role="button" class="btn-primary btn-lg" href="~/Home/Register">    Register    </a>
</div>


